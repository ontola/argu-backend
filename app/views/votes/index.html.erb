<h1>Listing votes</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>Statementargument</th>
      <th>User</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
<% @votes.each do |vote| %>
    <tr>
      <td><%= link_to vote.id, vote %></td>
      <td><%= link_to vote.statementargument_id, Statementargument.find_by_id(vote.statementargument_id) %></td>
      <td><%= link_to vote.user_id, User.find_by_id(vote.user_id) %></td>
      <td>
        <div class="btn-group">
          <%= link_to t(:application_general_show), vote, class: "btn btn-primary" %>
          <%= link_to t(:application_general_edit), edit_vote_path(vote), class: "btn" %>
          <%= link_to t(:application_general_destroy), vote, class: "btn btn-danger", confirm: t(:application_general_destroy_confirmation), method: :delete %>
        </div>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>