.col-1
  header
    h1= t('votes.confirm.headline')
  =render partial: "#{resource.class_name}/show", locals: {model: resource}
  .btns-opinion
    =render partial: 'votes/vote_form', locals: { resource: resource, stance: :pro, icon: 'thumbs-up' } if resource.class::VOTE_OPTIONS.include?(:pro)
    =render partial: 'votes/vote_form', locals: { resource: resource, stance: :neutral, icon: 'pause' } if resource.class::VOTE_OPTIONS.include?(:neutral)
    =render partial: 'votes/vote_form', locals: { resource: resource, stance: :con, icon: 'thumbs-down' } if resource.class::VOTE_OPTIONS.include?(:con)

  =link_to t('votes.confirm.skip'), resource, class: 'btn'
