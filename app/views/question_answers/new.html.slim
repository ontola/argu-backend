=set_title t('question_answers.couple_motion')
.col-1
  =to_parent
  .box
    =semantic_form_for([@question, @question_answer], path: @question_answer.persisted? ? nil : question_question_answers_path(@question), html: {autocomplete: 'off'}) do |f|
      section
        h1= t('question_answers.couple_motion')
        =f.inputs
          =f.input :motion, as: :react, component: 'MotionSelect', forum: @forum.url
        =f.actions
          =f.action :submit, as: :button
