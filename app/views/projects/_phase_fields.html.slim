.nested-fields
  legend
    span= t('projects.phases.add')
  =f.inputs do
    =f.input :name
    =f.input :description, input_html: {rows: 5}
    =f.input :end_date, as: :date_picker
    =f.input :end_time, as: :time_picker, label: '&nbsp;', input_html: {step: 1, value: '23:59:59'}
  =link_to_remove_association "#{t('delete_type', type: f.object.display_name)}", f, class: 'btn btn--light'
