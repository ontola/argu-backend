=form_tag(polymorphic_path([resource, :comments]), :method => "post", id: "cf" + parent_id.to_s, class: "comment_form", style: visible ? "" : "display: none;") do
  =text_area_tag :comment,"", :rows => 5, :cols => 50
  -unless parent_id.blank?
    input[type="hidden" class= "btn blue" name="parent_id" value ="#{parent_id}"]
  =submit_tag t("opinions.show.reply"), class: "btn clearfix blue"