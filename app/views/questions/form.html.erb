<%= content_tag :h1, t('questions.new_question'), class: 'top' if controller.action_name == 'new'%>
<div class="box center">
<%= form_for([@organisation, @question], html: { class: "form-horizontal" }) do |f| %>
  <% if @question.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@question.errors.count, "error") %> prohibited this question from being saved:</h2>
      <ul>
      <% @question.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class= "label-row">
    <%= f.text_field :title, class: "settingform verticalform questiontitle", placeholder: t("questions.form.title").capitalize %>
    <p class="helpertext floatleft"><%= t("questions.form.helper.title") %></p>
    <div class="clear"></div>
  </div>
  <div class= "label-row">
    <%= f.text_area :content, class: "settingform verticalform", placeholder: t("questions.form.content").capitalize, rows: "8" %>
    <p class="helpertext floatleft"><%= t("questions.form.helper.content") %></p>
    <div class="clear"></div>
  </div>
  <div class= "label-row">
    <%= f.text_field :tag_list, class: "tag-list settingform verticalform", placeholder: t("questions.form.themes") %>
    <p class="helpertext floatleft"><%= t("questions.form.helper.themes") %></p>
    <div class="clear"></div>
  </div>
  <%= f.submit t(:save), class: "btn blue"  %>
<% end %>
</div>