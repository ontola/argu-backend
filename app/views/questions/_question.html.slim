- tag ||= nil
.box
  section
    = link_to question_path(question) do
      h3.que-t = question.title
    p= question.supped_content.html_safe
    /p.info= t("statements.preview.pro", count: question.votes_pro_count) + ', ' + t("statements.preview.con", count: question.votes_con_count)
    p.info
      /= question.statements_count.to_s + " " + t("statements.plural")
      = "1 voorstel"