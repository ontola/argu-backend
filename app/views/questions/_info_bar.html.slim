section.section--details
  .detailsBar
    .detail[data-title=t('questions.tooltips.info')]
      .detail__icon.detail__icon--type.question-bg
        span[class="fa fa-#{question_icon}"]
      .detail__text
        span= question_type
    - if local_assigns[:show_parent]
      - unless params[:controller] == 'projects'
        - if question.project_id
          =link_to question.parent_model
            .detail[data-title=t('projects.go_to_parent')]
              .detail__icon
                span.project-t.fa.fa-rocket
              .detail__text
                span[itemprop="headline"]= truncate(question.parent_model.title, length: 30)
    - if question.children_count(:motions) > 0
      .detail[data-title=t('motions.tooltips.count', count: question.children_count(:motions))]
        .detail__icon.motion-t
          span[class="fa fa-#{motion_icon}"]
        .detail__text
          span= question.children_count(:motions)
    - if local_assigns[:show_visibility]
      .detail[data-title=visible_for_string(authenticated_resource)]
        .detail__icon
          span[class="fa fa-#{visibility_icon(authenticated_resource)}"]
    =render partial: 'decisions/decision_and_deadline', locals: {deadline: question.expires_at}
    - if question.pinned?
      .detail[data-title=t('edges.pinned_at', datetime: question.edge.pinned_at.to_formatted_s(:short))]
        .detail__icon
          span.fa.fa-map-pin
