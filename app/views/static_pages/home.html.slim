=set_title t('home_title')
.col-3.content
  .col-3-1.sidebar
    - unless current_user.guest?
      .box.box-transparant
        section
          h2= t('forums.my')
          .group
            ul.box-list-links
              - current_user.favorite_forums.includes(:default_profile_photo, :shortname).each do |o|
                li
                  =link_to o.iri_path, data: {turbolinks: false_unless_iframe}
                    =image_tag o.default_profile_photo.url(:icon).to_s, size: '16x16'
                    =o.name
          .group
            =link_to discover_forums_url, class: 'btn--argu' do
              span.fa.fa-compass
              span.icon-left=t('forums.show_open')
  .col-3-2
    h2= t('activities.news_feed.title')
    =render partial: 'activities/index', locals: {activities: [], complete_feed: false, feed_iri: feed_url(format: :js)}
