=set_title authenticated_resource || @profile
=connected_web url: @profile.profileable.canonical_iri,
               name: seolized_title(authenticated_resource || @profile),
               description: seolized_description(authenticated_resource || @profile),
               image: @profile.default_profile_photo
=render partial: 'manage_bar', locals: {resource: authenticated_resource, active: :show} if policy(authenticated_resource).update?
=render partial: 'profiles/show', locals: {resource: @profile}
.col-1
  header
    h1= t('forums.plural')
  .selector.grid
    .box-grid-sizer
    =render collection: @forums, partial: 'container_nodes/forum'
