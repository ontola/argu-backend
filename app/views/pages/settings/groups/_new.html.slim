=semantic_form_for(group, url: collection_iri_path(group.page, :groups), remote: true, authenticity_token: true) do |f|
  - group.errors.full_messages.each do |message|
    =message
  =f.inputs name: t('newe_type', type: t('groups.type')) do
    =f.inputs :name, :name_singular
  =f.semantic_fields_for(:grants, group.grants) do |f|
    =f.input :grant_set_id, as: :react_select, clearable: false, collection: [[:empty, -1]].concat(GrantSet.selectable.pluck(:title, :id)).map { |title, id| [t("roles.types.#{title}").capitalize, id] }, label: t('grants.labels.role')
    =f.input :edge_id, as: :react_select, clearable: false, collection: grant_edge_items(authenticated_resource.ancestor(:page)), required: false, include_blank: false, label: t('grants.labels.edge')
  =f.actions do
    =f.action :submit, as: :button
