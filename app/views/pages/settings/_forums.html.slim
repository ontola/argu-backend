h3= t('forums.plural')
- if resource.forums.present?
  table.styled
    thead
      tr
        td= t('portal.name')
        td= t('portal.shortname')
        td= t('portal.followers')
        td= t('groups.plural')
    - resource.forums.reorder(follows_count: :desc).each do |forum|
      tr
        td
          =link_to forum.display_name, edit_iri(forum), data: {turbolinks: false}
        td
          =forum.url
        td
          =forum.follows_count
        td
          =forum.granted_groups.count
- if policy(resource).create_child?(:forums)
  =link_to new_iri(resource, :forums), class: 'btn margin-bottom', data: {turbolinks: false} do
      span.fa.fa-plus
      span.icon-left= t('forums.type_new')
- else
  p= t('pages.settings.forums.get_one').html_safe
