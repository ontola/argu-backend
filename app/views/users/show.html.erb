<% provide(:title, @user.username || t(:users_show_title)) %>
<% unless current_user.nil? %>
  <% @title = ((current_user.id == @user.id)  ? 'profile' : 'users') %>
<% else %>
  <% @title = 'users' %>
<% end %>
<% provide(:menu_class, @title) %>
<h2><%= t(:users_show_title) %></h2>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<dl class="dl-horizontal">
	<dt><%= t(:users_show_username) %></dt>
	<dd><%= @user.username %></dd>
	<dt><%= t(:users_show_email) %></dt>
	<dd><%= @user.email %></dd>
	<dt><%= t(:application_general_clearance) %></dt>
	<dd><%= user_type(@user.clearance) %></dd>
</dl>