=set_title authenticated_resource
=connected_web url: authenticated_resource.context_id,
               name: seolized_title(authenticated_resource),
               description: seolized_description(authenticated_resource),
               image: authenticated_resource.profile.default_profile_photo
=render partial: 'profiles/profile_bar', locals: {resource: authenticated_resource.profile, active: :show} if policy(authenticated_resource.profile).update?
=render partial: 'profiles/show', locals: {resource: authenticated_resource.profile}
- if policy(authenticated_resource).feed?
  .col-1
    - if current_user == authenticated_resource && !authenticated_resource.profile.are_votes_public?
      span.fa.fa-lock
      span.icon-left= t('profiles.votes_are_private')
    =render partial: 'activities/index', locals: {activities: @activities}
