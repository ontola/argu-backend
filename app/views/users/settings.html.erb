<% provide(:menu_class, 'profile') %>
<div class="row">
	<div class="span3">
		<ul class="nav nav-pills nav-stacked">
			<li <%= settingsTabCheck(@tab)=='account' ? 'class=active' : '' %>><%= link_to t(:settings_item_account), tab: :account %></li>
			<li <%= settingsTabCheck(@tab)=='settings' ? 'class=active' : '' %>><%= link_to t(:settings_item_settings), tab: :settings %></li>
		</ul>
	</div>
	<div class="span9">
		<%= render ('/users/settings/' + settingsTabCheck(@tab)), user: @user %>
	</div>
</div>