<h2>Account</h2>

<%= form_for(@user, html: { class: "form-horizontal" }) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <fieldset class="control-group">
    <%= f.label t(:users_name), class: "control-label" %>
    <div class="controls"><%= f.text_field :name, value: @user.name, class: "input-xlarge" %></div>
  </fieldset>
  <fieldset class="control-group">
    <%= f.label t(:users_email), class: "control-label" %>
    <div class="controls"><%= f.text_field :email, value: @user.email, class: "input-xlarge" %></div>
  </fieldset>
  <fieldset class="control-group">
    <%= f.label t(:users_username), class: "control-label" %>
    <div class="controls"><%= f.text_field :username, value: @user.username, class: "input-xlarge" %></div>
  </fieldset>
  <fieldset class="control-group">
    <%= f.label t(:users_password), class: "control-label" %>
    <div class="controls"><%= f.password_field :password, class: "input-xlarge" %></div>
  </fieldset>
  <fieldset class="control-group">
    <%= f.label t(:users_password_confirmation), class: "control-label" %>
    <div class="controls"><%= f.password_field :password_confirmation, class: "input-xlarge" %></div>
  </fieldset>
  <fieldset class="form-actions">
    <%= f.submit t(:application_general_update), :class => "btn btn-primary" %>
  </fieldset>
<% end %>
