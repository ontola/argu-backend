<%= form_for(@argument) do |f|%>
  <% if @argument.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@argument.errors.count, "error") + t("error_prohibited") %></h2>

      <ul>
      <% @argument.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="span8">
      <fieldset class="control-group">
        <%= f.label :title, t("arguments.form.arg_title"), class: "control-label" %>
        <div class="controls">
          <%= f.text_field :title, class: "input-xlarge" %>
        </div>
      </fieldset>
      <fieldset class="control-group">
        <%= f.label :content, t("arguments.form.content"), class: "control-label" %>
        <div class="controls">
          <%= f.text_area :content, class: "input-xlarge", rows: "3" %>
        </div>
      </fieldset>
      <fieldset class="control-group">
        <%= f.label :argtype, t("arguments.form.type"), class: "control-label" %>
        <div class="controls">
          <%= f.select(:argtype, options_for_select([
            [t("arguments.type_scientific"), 0],
            [t("arguments.type_axiomatic"), 1],
            [t("arguments.type_other"), 2],
            [t("arguments.type_discussion"), 3]
            ], @argument.argtype)) %>
        </div>
      </fieldset>
      <%= f.hidden_field('statement_id', name: 'statement_id', value: @statement_id.to_s ) %>
      <%= f.hidden_field('pro', name: 'pro', value: @pro ) %>
      <fieldset class="form-actions">
        <%= link_to t("back"), arguments_path, class: "btn btn-danger" %>
        <%= f.submit nil, class: "btn btn-primary" %>
      </fieldset>
    </div>
  </div>
<% end %>
