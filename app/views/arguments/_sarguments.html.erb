<% @argument = Argument.find_by_id(statementargument.argument_id) %><pre><div class="argicon"><img class="argicon" src="<%= getimage(@argument) %>" alt="<%= getArgType(@argument) %>" /></div><div class="arghov"><h4 class="content arghead"><%= @argument.title %></h4><div class="argheadright"><h4 class="argvotes"><%= (statementargument.votes >= 1 ? "+" : "") + statementargument.votes.to_s %></h4><%= statementargument.destroyable_by?(current_user) ? (link_to "x", statementargument, class:"btn btn-danger argbtn", confirm: t(:application_general_destroy_confirmation), method: :delete) : "" %><%= link_to "+1", {:controller => :votes, :action => :create, :statementargument_id => statementargument.id, :user_id => (signed_in? ? current_user.id : nil) }, :method => :post, class:"btn btn-primary argbtn" %></div></div><div class="content"><%= @argument.content.strip[0,140] + ((@argument.content.strip.length < 140) ? "" : "...") %></div>
<p><small class="argtype">Type: <%= getArgType(@argument) %></small><small class="timestamp argtime">Posted <%= time_ago_in_words(@argument.created_at) %> ago.</small></p></pre>
