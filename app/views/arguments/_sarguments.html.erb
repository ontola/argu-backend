<% @argument = Argument.find_by_id(statementargument.argument_id) %>
<% @pro = statementargument.pro %>
<% @comment = getBestComment(@argument) %>
<div class=<%= (@pro ? "pargument" : "cargument") %>>
	<%= link_to @argument.title, argument_path(@argument), class: (@pro ? "pargtitle" : "cargtitle") %>
	<p><%= @argument.content.strip[0,140] + ((@argument.content.strip.length < 140) ? "" : "...") %><p>
	<% if (!@comment.nil?)%>
	<p class=<%= (@pro ? "pcomment" : "ccomment") %>><%= @comment.body %></p>
	<%= image_tag((@pro ? "pcmnt.png" : "ccmnt.png"), class: (@pro ? "imgpcomment" : "imgccomment")) %><% end %>
</div>