<% @argument = Argument.find_by_id(statementargument.argument_id) %><pre><img class="showicon" src="<%= getArgImage(@argument) %>" alt="<%= getArgType(@argument) %>" /><div class="showhov"><h4 class="content showhead"><%= @argument.title %></h4><div class="showheadright"><h4 class="showvotes"><%= (statementargument.votes >= 1 ? "+" : "") + statementargument.votes.to_s %></h4><%= statementargument.destroyable_by?(current_user) ? (link_to "x", statementargument, class:"btn btn-danger argbtn", confirm: t(:application_general_destroy_confirmation), method: :delete) : "" %><%= link_to "+1", {:controller => :votes, :action => :create, :statementargument_id => statementargument.id, :user_id => (signed_in? ? current_user.id : nil) }, :method => :post, class:"btn btn-primary argbtn" %></div></div><div class="content"><%= @argument.content.strip[0,140] + ((@argument.content.strip.length < 140) ? "" : "...") %></div>
<p><small class="showtype">Type: <%= getArgType(@argument) %></small><small class="timestamp showtime"><%=t(:application_general_edited)%> <%= time_ago_in_words(@argument.updated_at) %> ago.</small></p></pre>
