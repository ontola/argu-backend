<% provide(:menu_class, 'arguments') %>
<h1><%= t("arguments.index.title") %></h1>

<table class="table table-striped">
<thead>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Type</th>
    <th></th>
  </tr>
</thead>
<tbody>
<% @arguments.each do |argument| %>
  <tr>
    <td><%= argument.title %></td>
    <td><%= argument.content[0,75] + ((argument.content.length < 75) ? "" : "...") %></td>
    <td><%= getArgType(argument) %></td>
    <td>
      <div class="btn-group">
        <%= link_to t(:show), argument, class: "btn btn-primary" %>
        <%= link_to t(:edit), edit_argument_path(argument), class: "btn" %>
        <%= link_to t(:destroy), argument, class: "btn btn-danger", confirm: t(:destroy_confirmation), method: :delete %>
      </div>
    </td>
  </tr>
<% end %>
</tbody>
</table>

<br />

<%= link_to t("new", t("arguments.type")), new_argument_path, class: "btn" %>
