li[class=('tab--current' if local_assigns[:active] == tab.to_s)]
  =link_to url_for([:settings, resource.is_a?(Symbol) ? resource.downcase : resource, tab: tab])
    span[class="fa fa-#{tab_icon_for(tab)}"]
    span.icon-left= t("#{resource.try(:class_name) || resource.downcase}.settings.menu.#{tab}")