<div class=" revbar">
	<ul>
		<li>
			<%= @version.next.nil? ? nil : link_to( "← " + t("newer"),  statement_rev_revisions_url(@motion, @version.next), class:"btn") %>
		</li>
		<li id="revprev">
			<%= @version.previous.nil? ? t("revisions.oldest") : link_to( t("older") + " →",  statement_rev_revisions_url(@motion, @version.previous), class:"btn") %>
		</li>
		<% u = User.find_by_id(@motion.version.whodunnit) %>
	</ul>
</div>

<header style="clear:both">
	<div class= "box statement">
		<h1 class="title"><%= @motion.title %></h1>
		<p><%= @motion.content %></p>
		<div class="infobar">
			<div class="tags floatleft">
				<% @motion.tags.any? %>
					<% @motion.tags.each do |tag| %>
		  			<%= link_to tag.name, tagged_url(:tag => tag.name), class:"tag" %>
				<% end %>
			</div>
			<ul class="buttons">
				<li>
					<div class="info floatright hastags">
						<p>
							<% u = User.find_by_id(@motion.version.whodunnit) %>
							<p>bewerkt door <%= u.username %> <%= @version.created_at.to_s %></p>
						</p>
					</div>
				</li>
			</ul>
			</div>
		<div style='clear:both;'></div>
	</div>
</header>

<div class="centerbar">
	<% if(@motion.live?)%>
		<%= t("revisions.current") %>
	<% else %> 
		<%= link_to(t("revisions.revert"), statement_update_revision_url(@motion, @version), method: :put, class: "btn") %>
	<% end %>
</div>
