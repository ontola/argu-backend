- tag ||= nil
.box.box-grid.motion[class="#{'trashed' if motion.is_trashed?}" data-tags="#{motion.tags.join(',')}" data-created-at=motion.created_at  data-updated-at=motion.updated_at data-score=motion.raw_score]
  -if motion.cover_photo.present?
    = contextual_link_to motion_path(motion) do
      .box-image[style="background-image: url('#{motion.cover_photo.url(:box)}'); "]
  section.section-info.sta-bg
    span voorstel
  section
    = contextual_link_to motion_path(motion) do
      h2.sta-t = motion.title