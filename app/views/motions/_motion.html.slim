.box.box-grid.motion[class="#{'trashed' if motion.is_trashed?}" data-created-at=motion.created_at  data-updated-at=motion.updated_at data-vote-count=motion.total_vote_count itemscope="itemscope" itemtype="http://schema.org/Answer"]
  -if motion.default_cover_photo&.url.present?
    =contextual_link_to motion_path(motion) do
      =render partial: 'application/box_image', locals: {url: question.default_cover_photo.url(:box), type: 'question'}
  =contextual_link_to motion_path(motion) do
    =render partial: 'motions/info_bar', locals: {motion: motion}
  =contextual_link_to motion_path(motion) do
    section
      h2.motion-t[itemprop="headline"]= motion.title
