.box.box-grid.motion[class="#{'trashed' if motion.is_trashed?}" data-created-at=motion.created_at  data-updated-at=motion.updated_at data-vote-count=motion.total_vote_count itemscope="itemscope" itemtype="http://schema.org/Answer"]
  -if motion.cover_photo.present?
    =contextual_link_to motion_path(motion) do
      .box-image[style="background-image: url('#{motion.cover_photo.url(:box)}'); "]
  =contextual_link_to motion_path(motion) do
    section.section-info.motion-bg
      span[class="fa fa-#{motion_icon}"]
      span.icon-left= motion_type
      .details
        .details-part.details-part--type.motion-bg
          span[class="fa fa-#{motion_icon}"]
          span.icon-left= motion_type
        /.details-part
          span.fa.fa-tag
          span.icon-left veiligheid
        /.details-part
          span.fa.fa-eye
          span.icon-left 79
        /.details-part
          span.fa.fa-comment
          span.icon-left 7
        .details-part.tooltip[data-title=t('tooltips.motion.vote_count')]
          span.fa.fa-check-square-o
          span.icon-left= motion.total_vote_count.to_s
        - if active_for_user?(:argument_tooltips, current_user)
          .details-part.tooltip[data-title=pro_arguments_preview_tooltip(motion)]
            span.fa.fa-plus
            span.icon-left= motion.argument_pro_count
          .details-part.tooltip[data-title=con_arguments_preview_tooltip(motion)]
            span.fa.fa-minus
            span.icon-left= motion.argument_con_count
        - else
          .details-part.tooltip[data-title=t('tooltips.motion.arguments_pro_count')]
            span.fa.fa-plus
            span.icon-left= motion.argument_pro_count
          .details-part.tooltip[data-title=con_arguments_preview_tooltip(motion)]
            span.fa.fa-minus
            span.icon-left= motion.argument_con_count
        /.details-part
          span.fa.fa-clock-o
          span.icon-left= time_ago_in_words(motion.updated_at)
    section
      h2.motion-t[itemprop="headline"]= motion.title