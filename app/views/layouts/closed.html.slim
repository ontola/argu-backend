doctype html
html[class="no-js"]
  head[itemscope itemtype="http://schema.org/WebSite"]
    meta[charset="UTF-8"]
    title= (yield(:title).blank? ? '' : yield(:title) + ' | ') + t('name')
    =csrf_meta_tags
    =render partial: 'application/polyfill'

    =render 'layouts/meta'

    =javascript_include_tag 'turbolinks/dist/turbolinks', data: {:'turbolinks-permanent' => true}
    =javascript_include_tag 'application', data: {:'turbolinks-permanent' => true}

    / unless current_user.blank?
    =stylesheet_link_tag 'application', :media => 'all'
    - if Rails.env.production?
      =render partial: 'analytics'
    - if Rails.env.test?
      =stylesheet_link_tag 'testing'
  body
    =render partial: 'alerts'
    =render 'closed/navbar'
    .wrapper#start-of-content[tabindex='-1']
      /[if lt IE 10]
        p.browsehappy= raw t('outdated_browser')
      .container
        =yield
    =render partial: 'initial_state'
