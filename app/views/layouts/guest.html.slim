doctype html
html[class="no-js"]
  head[itemscope itemtype="http://schema.org/WebSite"]
    meta[charset="UTF-8"]
    title= (yield(:title).blank? ? '' : yield(:title) + ' | ') + t('name')
    =csrf_meta_tags
    =render partial: 'polyfill'

    =yield :connected_web
    =render 'layouts/meta'

    =javascript_include_tag 'turbolinks/dist/turbolinks', defer: true, data: {:'turbolinks-permanent' => true}
    =javascript_pack_tag 'application', defer: true, data: {:'turbolinks-permanent' => true}
    =javascript_include_tag 'application', defer: true, data: {:'turbolinks-permanent' => true}
    =render partial: 'styles'

    link[rel="copyright" content="#{t('site.copyright')}"]
    - if Rails.env.production?
      =render partial: 'analytics'
    - if Rails.env.test?
      =stylesheet_link_tag 'testing'
  body
    #fb-root
    =render 'guest/navbar', permanent: 'navbar'
    .wrapper#start-of-content[tabindex='-1']
      /[if lt IE 10]
        p.browsehappy= raw t('outdated_browser')
      =render partial: 'alerts'
      .container
        =yield
      .push-footer
    =render 'footer'
    =render partial: 'body_js'
