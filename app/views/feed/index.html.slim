div[itemscope="itemscope" itemtype="http://www.schema.org/Answer"]
  - if authenticated_resource.parent.is_a?(Page)
    =render partial: 'profiles/show', locals: {resource: authenticated_resource.parent}
  - elsif authenticated_resource.parent.is_a?(Forum)
    =render partial: 'forums/cover', locals: {resource: authenticated_resource.parent}
  - elsif authenticated_resource.parent.present?
    .col-1
      =to_parent(authenticated_resource.parent)
  .col-1
    - if policy(authenticated_resource.parent).log?
      div.align-right
        span.btn.btn-subtle[class="#{params[:complete] != 'true' ? 'btn--border' : ''}"]
          =link_to feeds_iri_path(authenticated_resource.parent) do
            span.fa.fa-bars
            span.icon-left
              =t('feed_filter.relevant')
        span.btn.btn-subtle[class="#{params[:complete] == 'true' ? 'btn--border' : ''}"]
          =link_to feeds_iri_path(authenticated_resource.parent, complete: true) do
            span.fa.fa-align-justify
            span.icon-left
              =t('feed_filter.complete')
        - if authenticated_resource.parent&.is_loggable?
            span.btn.btn-subtle
              =link_to expand_uri_template(:logs_iri, edge_id: authenticated_resource.parent.edge.id) do
                span.fa.fa-history
                span.icon-left
                  =t('log')
    =render partial: 'activities/index', locals: {activities: activities, complete_feed: !relevant_only, feed_iri: "#{feeds_iri_path(authenticated_resource.parent)}.js"}
