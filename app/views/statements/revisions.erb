<div class=" revbar">
		<ul>
		<li><h3 class="left"><%= @version.next.nil? ? nil : link_to( t("next"),  statement_rev_revisions_url(@statement, @version.next)) %></h3></li>
		<li id="revprev"><h3 class="right"><%= @version.previous.nil? ? t("revisions.oldest") : link_to( t("previous"),  statement_rev_revisions_url(@statement, @version.previous)) %></h3></li>
				<% u = User.find_by_id(@statement.version.whodunnit) %>
		
	</ul>
</div>

<header>
	<div class= "box statement">
		<h1 class="title"><%= @statement.title %></h1>
		<p><%= @statement.content %></p>
		<div class="tags floatleft">
			<% @statement.tags.any? %>
				<% @statement.tags.each do |tag| %>
	  			<%= link_to tag.name, tagged_url(:tag => tag.name), class:"tag" %>
			<% end %>
		</div>
		<ul class="buttons">
			<li>
				<div class="info floatright">
					<p>
						<% u = User.find_by_id(@statement.version.whodunnit) %>
						<p>bewerkt door <%= u.username %> <%= @version.created_at.to_s %></p>
					</p>
				</div>
			</li>
		</ul>
		<div style='clear:both;'></div>
	</div>
</header>

<div class="centerbar"><% if(@statement.live?)%><%= t("revisions.current") %><% else %> <%= link_to(t("revisions.revert"), statement_update_revision_url(@statement, @version), method: :put, class: "btn") %><% end %></div>
