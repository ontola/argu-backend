<div class="revbar">
	<ul>
		<li><h3><%= @version.next.nil? ? "Recenst" : link_to('Volgende', rev_revisions_statement_url(@statement, @version.next)) %></h3></li>
		<li id="revheader"><h2><%= @version.created_at.to_s %></h2></li>
		<li id="revprev"><h3><%= @version.previous.nil? ? "Oudst" : link_to('Vorige', rev_revisions_statement_url(@statement, @version.previous)) %></h3></li>
	</ul>
</div>
<div>
	<ul class="revunderbar">
		<% u = User.find_by_id(@statement.version.whodunnit) %>
		<li>Edited by: <%= u.username %></li>
		<li><h3>Options:</h3></li>
		<li><% if(@statement.live?)%><%= "Current" %><% else %> <%= link_to('Revert', update_revision_statement_url(@statement, @version), method: :put) %><% end %></li>

	</ul>
</div>
<%= render 'statementbody' %>
