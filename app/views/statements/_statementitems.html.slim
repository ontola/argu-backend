div.col-2
  -[:pro, :con].each do |p|
    .col-2-1
      header[class=("argtypebox " + p.to_s)]
        h2[class=(p.to_s + "-bg")]=t("arguments." + p.to_s)
      -unless items[p].nil?
        -items[p].each do |i|
          =render i
      .center
        =link_to t("#{resource.name.downcase.pluralize}.new.create", side: t("arguments." + p.to_s)), self.send("new_#{resource.to_s.downcase}_path", pro: p, statement_id: statement.id), class: p.to_s + "-t btn btn-white"