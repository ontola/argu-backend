<% provide(:title, @statement.title.nil? ? t(:statement_title) : @statement.title) %>
<header>
	<h1><%= @statement.title.nil? ? @statement.title : @statement.title %></h1>
</header>
<div class="row-fluid">
	<h2>
		<%= @statement.content %>
	</h2>
</div>
<div class="row">
	<div class="span12">
		<div class="row">
		<div class="span6">
			<h3><%= t(:statement_pros) %></h3>
			<% hasItems = nil %><% @statement.arguments.each do |argument| %><% if @statement.statementarguments.find_by_argument_id(argument.id).pro %>
				<%= render 'arguments/sarguments', statementargument: @statement.statementarguments.find_by_argument_id(argument.id) %><% hasItems = 1 %><% end %><% end %><% if hasItems != 1 %><%= "No pros yet." %><% end %>
		</div>
		<div class="span6">
			<h3><%= t(:statement_cons) %></h3>
			<% hasItems = nil %><% @statement.arguments.each do |argument| %><% if !(@statement.statementarguments.find_by_argument_id(argument.id).pro) %>
				<%= render 'arguments/sarguments', statementargument: @statement.statementarguments.find_by_argument_id(argument.id) %><% hasItems = 1 %><% end %><% end %><% if hasItems != 1 %><%= "No pros yet." %><% end %>
		</div>
		</div>
		<div class="row">
			<div class="span3">
				<p><%= link_to t(:argument_add), '#addargument', statement_id: @statement.id, remote: true, class: "btn btn-primary", "data-toggle" => "modal", 'data-backdrop' => true, 'data-keyboard' => true %>
				<%= link_to t(:application_general_edit), edit_statement_path(@statement), class: "btn btn-primary" %></p>
			</div>
		</div>
	</div>
</div>
<%= render 'addargument' %>