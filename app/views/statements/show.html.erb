<% provide(:title, @statement.title.nil? ? t(:statement_title) : @statement.title) %>
<header>
	<h1><%= @statement.title.nil? ? @statement.title : @statement.title %></h1>
</header>
<div class="row-fluid">
	<h2>
		<%= @statement.content %>
	</h2>
</div>
<div class="row">
	<div class="span12">
		<div class="row">
		<div class="span6">
			<h3><%= t(:statement_pros) %></h3>
			<pre>
				<% hasItems = nil %>
				<% @statement.arguments.each do |argument| %>
					<% if @statement.statementarguments.find_by_argument_id(argument.id).pro %>
      					<%= link_to argument.title, argument %>
      					<% hasItems = 1 %>
      				<% end %>
    			<% end %>
    			<% if hasItems != 1 %>
    				<%= "No pros yet." %>
    			<% end %> 
    		</pre>
			<p><%= link_to t(:application_general_add), '#addproargument', remote: true, class: "btn btn-primary", "data-toggle" => "modal", 'data-backdrop' => true, 'data-keyboard' => true %></p>
		</div>
		<div class="span6">
			<h3><%= t(:statement_cons) %></h3>
			<pre>
				<% hasItems = nil %>
				<% @statement.arguments.each do |argument| %>
					<% if @statement.statementarguments.find_by_argument_id(argument.id).con %>
    	  				<%= link_to argument.title, argument %>
      					<% hasItems = 1 %>
      				<% end %>
      			<% end %>
			    <% if hasItems != 1 %>
    				<%= "No cons yet." %>
    			<% end %>
    			</pre>
    			<p><%= link_to t(:application_general_add), '#addconargument', class: "btn btn-primary", "data-toggle" => "modal", 'data-backdrop' => true, 'data-keyboard' => true %></p>
		</div>
		</div>
		<div class="row">
			<div class="span2">
				<%= link_to t(:application_general_edit), edit_statement_path(@statement), class: "btn btn-primary" %>
			</div>
		</div>
	</div>
</div>
<%= render 'addproargument' %>
<%= render 'addconargument' %>