<%= form_for(@statement, html: { class: "form-horizontal" }) do |f| %>
  <% if @statement.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@statement.errors.count, "error") %> prohibited this statement from being saved:</h2>
      <ul>
      <% @statement.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class= "label-row">
    <%= f.label :title, t(:statement_title), class: "vertical" %>
    <div class="clear"></div>
    <%= f.text_field :title, class: "settingform verticalform" %>
    <p class="helpertext floatleft"><%= t("statements.form.helper.title") %></p>
    <div class="clear"></div>
  </div>
  <div class= "label-row">
    <%= f.label :content, t(:statement_content), class: "vertical" %>
    <div class="clear"></div>
    <%= f.text_area :content, class: "settingform verticalform", rows: "4" %>
    <p class="helpertext floatleft"><%= t("statements.form.helper.content") %></p>
    <div class="clear"></div>
  </div>
  <div class= "label-row">
    <%= f.label :statetype, t(:statement_type), class: "vertical" %>
    <div class="clear"></div>
    <div class="floatleft dropdown">
      <%= f.select(:statetype, options_for_select([
        [getStateType(0), 0],
        [getStateType(1), 1],
        [getStateType(2), 2],
        [getStateType(3), 3],
        [getStateType(4), 4],
        [getStateType(5), 5],
        [getStateType(6), 6],
        [getStateType(7), 7],
        ], @statement.statetype)) %>
    </div> 
    <p class="helpertext floatleft"><%= t("statements.form.helper.type") %></p>
    <div class="clear"></div>
  </div>
  <%= f.submit t(:save), class: "btn"  %>
<% end %>
