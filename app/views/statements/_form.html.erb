<div class="box center">
<%= form_for(@statement, html: { class: "form-horizontal" }) do |f| %>
  <% if @statement.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@statement.errors.count, "error") %> prohibited this statement from being saved:</h2>
      <ul>
      <% @statement.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class= "label-row">
    <%= f.text_field :title, class: "settingform verticalform statementtitle", placeholder: t("statements.form.title").capitalize %>
    <p class="helpertext floatleft"><%= t("statements.form.helper.title") %></p>
    <div class="clear"></div>
  </div>
  <div class= "label-row">
    <%= f.text_area :content, class: "settingform verticalform", placeholder: t("statements.form.content").capitalize, rows: "8" %>
    <p class="helpertext floatleft"><%= t("statements.form.helper.content") %></p>
    <div class="clear"></div>
  </div>
  <div class= "label-row">
    <%= f.text_field :tag_list, class: "settingform verticalform", placeholder: t("statements.form.themes") %>
    <p class="helpertext floatleft"><%= t("statements.form.helper.themes") %></p>
    <div class="clear"></div>
  </div>
<!-- TODO invert arguments only visible when in edit, not in new. 
    <%= f.label :invert_arguments, t("statements.form.invert"), class: "vertical" %>
    <%= f.check_box :invert_arguments %> 
    <div class="clear"></div> 
-->
  <%= f.submit t(:save), class: "btn blue"  %>
<% end %>
</div>