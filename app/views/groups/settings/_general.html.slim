=semantic_form_for(resource, url: group_url, method: :patch, remote: true, authenticity_token: true) do |f|
  - resource.errors.full_messages.each do |message|
    =message
  =f.inputs name: t('update_type', type: t('groups.type')) do
    =f.inputs :name, :name_singular, input_html: {maxlength: 75, minlength: 3}
    =f.input :tab, input_html: {value: local_assigns[:tab]}, as: :hidden
    =f.actions do
      =f.action :submit, as: :button
