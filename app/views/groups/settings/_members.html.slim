h3= t('group_memberships.plural')
- if resource.group_memberships.empty?
  p= t('group_memberships.empty')
- else
  table.styled.members
    tbody
      - @members.each do |membership|
        tr[class=membership.member.identifier]
          td.name= link_to membership.member.display_name, url_for(membership.member.profileable)
          - if policy(membership).destroy?
            td= link_to group_membership_path(membership, r: settings_group_path(resource)), data: {method: :delete, turbolinks: 'false', confirm: t('group_memberships.destroy_confirmation', user: membership.member.display_name, group: membership.group.display_name)}, class: 'btn--light btn--smaller' do
              span.fa.fa-close
              span.icon-left= t('destroy')
  =paginate @members
=link_to new_group_group_membership_path(resource), class: 'btn--light btn--smaller' do
  span.fa.fa-plus
  span.icon-left= t('groups.settings.menu.invite', singular: resource.name_singular)
