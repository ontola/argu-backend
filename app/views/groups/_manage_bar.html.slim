.tabs-to-top
  .tabs-container
    ul.tabs
      li= link_to resource.page.iri_path, data: {intro: t('intro.pages.settings.home')}
        span.fa.fa-building
        span.icon-left= resource.root.display_name
      li= link_to settings_iri_path(resource.root, tab: :groups)
        span.fa.fa-cog
        span.icon-left= t('pages.settings.title')
      li[class=('tab--current' if local_assigns[:active] == :settings)]
        =link_to settings_iri_path(resource)
          span.fa.fa-cog
          span.icon-left= t('groups.settings.title')
