.cover
  /-if @forum.cover_photo.url.present?
  .cover-image[style="background-image: url('#{@forum.cover_photo.url(:cover)}')"]
  .cover-header
    .cover-container
      h1= @forum.name
      ul.btns-list.btns-vertical
        -if !policy(@forum).is_member?
          li=link_to forum_memberships_path(@forum.web_url), method: :create, class: "btn-focus" do
            span.fa.fa-join
            span = t("join")
        li[data-intro=t('intro.question.create', name: @forum.name) data-position="left"]=link_to url_for([:new, @forum, :question]) do
          span.fa.fa-plus.que-t
          span.icon-left.que-t= t("questions.new_btn")
        li[data-intro=t('intro.motion.create', name: @forum.name) data-position="left"]=link_to url_for([:new, @forum, :motion]) do
          span.fa.fa-plus.sta-t
          span.icon-left.sta-t= t("motions.new_btn")
=render partial: 'manage_bar', locals: {resource: @forum} if policy(@forum).update?
.center
  .tags
    - @forum.featured_tags.each do |tag|
      = contextual_link_to(tag, forum_tag_url(@forum.web_url, tag), class: "tag", title: t("motions.titles.tags")+tag)

- if policy(@forum).show_children?
  .grid
    .box.box-grid-sizer[data-intro=t('intro.forum.grid') data-position="top"]
    -@items.each do |item|
      = render item