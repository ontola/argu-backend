h3= t('shortnames.type').capitalize.pluralize
p= t('shortnames.info')
- if policy(resource).max_shortname_count?
  =semantic_form_for resource, url: resource.iri_path, multipart: true, remote: true, authenticity_token: true do |f|
    =f.input :max_shortname_count
    =f.input :tab, input_html: {value: local_assigns[:tab]}, as: :hidden
    =f.actions do
      =f.action :submit, as: :button
p= t('shortnames.current_out_of_max', current: @forum.shortnames.count, max: @forum.max_shortname_count)
p= t('shortnames.contact_argu')
table
  thead
    tr
      td Shortname
      td Object
      td Actions
  tbody
    -@forum.shortnames.each do |shortname|
      tr
        td= shortname.shortname
        td= link_to shortname.owner.display_name, shortname.owner
        td
          =link_to t('edit'), edit_shortname_url(shortname), class: 'btn'
          =link_to t('destroy'), shortname_url(shortname), class: 'btn btn--warning', data: {remote: true, method: :delete, confirm: t('destroy_confirmation')}
- if policy(@forum.shortnames.new).create?
  =link_to t('newe_type', type: t('shortnames.type')), new_iri_path(@forum, :shortnames), class: 'btn'
