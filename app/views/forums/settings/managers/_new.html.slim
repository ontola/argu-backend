=set_title t('forums.settings.title')
=semantic_form_for(@membership, url: url_for([@forum, :managers]), method: :post) do |f|
  - @membership.errors.full_messages.each do |message|
    =message
  =f.inputs name: t('newe_type', type: t('forums.settings.manager')) do
    =react_component 'NewMembership', things: 'users', forum: @forum.url
  =f.actions do
    =f.action :submit, as: :button, label: :save