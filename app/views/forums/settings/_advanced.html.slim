=semantic_form_for resource, multipart: true do |f|
  =f.input :lock_version, as: :hidden
  =f.input :tab, value: local_assigns[:tab], as: :hidden
  =f.input :active, value: local_assigns[:active], as: :hidden
  - resource.errors.full_messages.each do |message|
    =message
  - if policy(resource).terminology?
    =f.inputs name: t('forums.settings.terminology') do
      =f.input :uses_alternative_names, as: :reverse_boolean

      =f.input :questions_title
      =f.input :questions_title_singular

      =f.input :motions_title
      =f.input :motions_title_singular

      =f.input :arguments_title
      =f.input :arguments_title_singular

    - if policy(resource).change_owner? || policy(resource).shortname?
      =f.inputs name: t('forms.danger_zone'), class: 'danger-zone' do
        -if policy(resource).shortname?
          =f.input :shortname
        -if policy(resource).change_owner?
          =f.input :page
  =hidden_field_tag :tab, :advanced
  =f.actions do
    =f.action :submit, :as => :button