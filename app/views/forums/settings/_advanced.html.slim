=semantic_form_for resource, multipart: true, remote: true, authenticity_token: true do |f|
  =f.input :lock_version, as: :hidden
  =f.input :active, value: local_assigns[:active], as: :hidden
  - resource.errors.full_messages.each do |message|
    =message
  - if policy(resource).max_shortname_count?
    =f.input :max_shortname_count
  - if policy(resource).change_owner? || policy(resource).shortname?
    =f.inputs name: t('forms.danger_zone'), class: 'danger-zone' do
      -if policy(resource).shortname?
        =f.inputs :shortname, for: :shortname
        li.form-helper
          span= t('forums.shortname.warning')
      -if policy(resource).change_owner?
        =f.input :page
      - if policy(resource).delete?
        =f.input :f_delete, as: :link, url: delete_forum_url(resource), input_html: {data: {remote: true}, class: 'btn--warning'}, label: false
  =f.input :tab, input_html: {value: local_assigns[:tab]}, as: :hidden
  =f.actions do
    =f.action :submit, :as => :button
