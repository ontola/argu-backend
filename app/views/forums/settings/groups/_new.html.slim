=semantic_form_for(@group, url: forum_groups_path(@forum)) do |f|
  - @group.errors.full_messages.each do |message|
    =message
  =f.inputs name: t('newe_type', type: t('groups.type')) do
    =f.inputs :name, :name_singular, :icon
    =f.input :visibility, as: :select, collection: Group.visibilities.keys, include_blank: false
    =f.input :max_responses_per_member, min: -1
  =f.actions do
    =f.action :submit, :as => :button
